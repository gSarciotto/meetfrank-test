{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "lib": ["ESNext", "DOM"],
        "outDir": "dist",
        "removeComments": true,
        "target": "ES2016",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*",
    ]
}